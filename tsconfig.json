{
    "compilerOptions": {
       "strict": true,
       "lib": [
          "ESNext"
       ],
       "target": "ESNext",
       "module": "CommonJS",
       "moduleResolution": "Node",
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "rootDir": "./src",
       "outDir": "./dist",
       "importHelpers": true,
       "skipLibCheck": true,
       "noImplicitAny": false,
       "noEmitOnError": true,
       "skipDefaultLibCheck": true,
       "allowSyntheticDefaultImports": true,
       "removeComments": true,
       "paths": {
          "@/*": ["./src/*"],
          "@root/*": ["./*"]
       }
    },
    "exclude": [
       "node_modules",       "dist"
    ],
    "compileOnSave": true
 }
 